Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["elasticbeanstalk-us-east-1-146973438662"]
          roleName:
            "Fn::GetOptionSetting":
              Namespace: "aws:autoscaling:launchconfiguration"
              OptionName: "IamInstanceProfile"
              DefaultValue: "aws-elasticbeanstalk-ec2-role"

packages:
    yum:
        postgresql96-server: []

users:
    svcuser:
        uid: "50"
        homeDir: "/tmp"

container_commands:
    01-add-svcuser:
        command: "usermod -aG sudo svcuser"
    02-grant-svcuser:
        command: "psql -U postgres 'GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA public TO svcuser;'"

